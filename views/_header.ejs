<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href="/">
                    codeial
                </a>
            </p>
        </div>
        <div class="auth-links">
            <ul>
                <% if(locals.user){ %>
                    <li>
                        <a href='/users/profile/<%=user._id %>'><%=user.name %></a>
                    </li>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                <% }else{ %>
                    <li>
                        <a href="/users/signin">Sign in</a>
                        <p> <%= locals.user %> </p>
                    </li>
                    <li>
                        <a href="/users/signup">sign up</a>
                    </li>
                    <% } %>
            </ul>
        </div>
    </nav>
</header>